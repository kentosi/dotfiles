# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        interval = 3

        colors = true
        color_good = "#D8DEE9"
        color_degraded = "#D8DEE9"
        color_bad = "#D8DEE9"
}

order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "time"

disk "/" {
        format = " root %avail"
        prefix_type = "decimal"

        separator = false
        separator_block_width = 15
}

wireless _first_ {
        format_up = " %quality %ip"
        format_down = ""

        separator = false
        separator_block_width = 15
}

ethernet _first_ {
        format_up = " %speed %ip"
        format_down = ""

        separator = false
        separator_block_width = 15
}

battery all {
        format = "%status %emptytime"
        format_down = ""
        status_chr = ""
        status_bat = ""
        status_unk = ""
        status_full = ""
        low_threshold = 15
        last_full_capacity = true

        separator = false
        separator_block_width = 15
}

time {
        format = " %a %Y-%m-%d"
}

