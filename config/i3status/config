# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        interval = 3

        colors = true
        color_good = "#D8DEE9"
        color_degraded = "#D8DEE9"
        color_bad = "#D8DEE9"
}

order += "disk /"
order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "time"

disk "/" {
        format = " %avail"
        prefix_type = "decimal"

        separator = false
        separator_block_width = 15
}

wireless _first_ {
        format_up = " %essid"
        format_down = " <down>"

        separator = false
        separator_block_width = 15
}

volume master {
        format = " %volume"
        format_muted = " ---"
        device = "default"
        mixer = "Master"
        mixer_idx = 0

        color_degraded = "#EBCB8B"

        separator = false
        separator_block_width = 15
}

battery all {
        format = "%status %percentage"
        format_down = ""
        status_chr = ""
        status_bat = ""
        status_unk = ""
        status_full = ""
        low_threshold = 15
        last_full_capacity = true

        separator = false
        separator_block_width = 15
}

time {
        format = " %Y-%m-%d %H:%M"
}

